{
  "name": "backend-service-template",
  "version": "1.0.0",
  "description": "nodejs backend api using the repository pattern and dependency injection",
  "main": "dist/server.js",
  "scripts": {
    "test": "jest",
    "start": "node --env-file=.env dist/server.js",
    "start:dev": "nodemon",
    "build": "tsup",
    "lint:ts": "eslint . --fix --ext .ts,.js,.json",
    "lint:scripts": "npx scriptlint",
    "health": "npm run lint:ts && yarn build",
    "clean": "rm -rf node_modules .next package-lock.json",
    "format": "prettier --write 'src/**/*.ts' '@types/**/*.ts'"
  },
  "keywords": [],
  "author": "Joel Fickson",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.29.4",
    "express": "^4.18.3",
    "express-fileupload": "^1.4.0",
    "helmet": "^5.1.0",
    "jsonwebtoken": "^8.5.1",
    "postgres": "^3.4.3",
    "reflect-metadata": "^0.2.1",
    "tsyringe": "^4.8.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "tsup": "^8.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.21",
    "@types/express-fileupload": "^1.2.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.8.8",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  }
}
